<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ControlActivity"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Balance"
            tools:ignore="HardcodedText"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            tools:ignore="HardcodedText"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹"
            tools:ignore="HardcodedText"
            android:textSize="24sp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <RadioGroup
        android:id="@+id/rg_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select time"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/r_time_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 min (10 ₹)"
            tools:ignore="HardcodedText"/>

        <RadioButton
            android:id="@+id/r_time_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 min (20 ₹)"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/r_time_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30 min (30 ₹)"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/r_time_60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="60 min (60 ₹)"
            tools:ignore="HardcodedText" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

    <Button
        android:id="@+id/bt_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        tools:ignore="HardcodedText"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

</LinearLayout>